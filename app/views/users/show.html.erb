<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<% if @user.events.any? %>
<ul class="events">
 <%= render @events %>
</ul>
<% end %>

<% if @user.attended_events.any? %>
	<h2>Upcoming Events</h2> 
	<ul class="media-list">
		<%= render @upcoming_events %>
	</ul>
<% else %>
	<p>Not attending any Events</p>
<% end %>

<h2>Past Events</h2>
		<% if @events.past.any? %>
			<ul class="media-list">
				<%= render @events.past %>
			</ul>
		<% end %>